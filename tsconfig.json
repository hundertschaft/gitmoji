{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2017",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "pages/**/*"
    ]
}